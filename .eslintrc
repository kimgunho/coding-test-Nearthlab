{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 8,
    "requireConfigFile": false,
    "sourceType": "module"
  },
  "plugins": ["import", "node", "promise", "standard", "prettier"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "rules": {
    "no-console": "warm",
    "prettier/prettier": ["error", { "endOfLine": "auto" }]
  }
}
